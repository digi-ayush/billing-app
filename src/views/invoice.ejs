<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Invoice <%= invoice.invoiceNo %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { font-family: Arial, sans-serif; background: #fff; }
    .invoice-container {
      width: 210mm;
      min-height: 297mm;
      margin: auto;
      padding: 15mm;
      border: 2px solid #000;
      background: #fff;
    }
    .header-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 2px solid #000;
      padding-bottom: 10px;
      margin-bottom: 15px;
    }
    .company-block { text-align: right; }
    .table thead th { text-align: center; vertical-align: middle; }
    .text-end { text-align: right !important; }
    .table td, .table th {
      padding: 6px 8px;
      font-size: 14px;
    }
    .tfoot-right { text-align:right; font-weight: bold; }
    .amount-in-words {
      font-size: 14px;
      margin-top: 10px;
      font-style: italic;
    }
    .auth-sign {
      margin-top: 40px;
      text-align: right;
      font-size: 14px;
    }
    .auth-sign .line {
      border-top: 1px dashed #000;
      width: 200px;
      float: right;
      margin-bottom: 5px;
    }
    @media print {
      body { background: #fff; }
      .invoice-container { box-shadow: none; border: none; margin: 0; }
    }
  </style>
</head>
<body>
<div class="invoice-container">
  <!-- Header -->
  <div class="header-top">
    <div>
      <img src="blob:https://in.pinterest.com/9377bac9-4fc7-4591-91a7-ec0c8a95b1fc" alt="Logo">
    </div>
    <div class="company-block">
      <h4><strong><%= invoice.company.name %></strong></h4>
      <div><%= invoice.company.addressLine1 %></div>
      <div><%= invoice.company.addressLine2 %></div>
      <div>GSTIN : <%= invoice.company.gstin %></div>
      <div>Email: <%= invoice.company.email %> | Ph: <%= invoice.company.phone %></div>
    </div>
  </div>

  <!-- Customer Info -->
  <div class="d-flex justify-content-between mb-3">
    <div>
      <strong>Bill To:</strong><br>
      <%= invoice.customer.name %><br>
      <%= invoice.customer.address %><br>
      GSTIN: <%= invoice.customer.gstin %>
    </div>
    <div class="text-end">
      <div><strong>Invoice No:</strong> <%= invoice.invoiceNo %></div>
      <div><strong>Date:</strong> <%= invoice.date %></div>
      <div><strong>Due Date:</strong> <%= invoice.dueDate %></div>
    </div>
  </div>

  <!-- Table -->
  <table class="table table-bordered table-sm">
    <thead class="table-dark">
      <tr>
        <th style="width:5%">S.No</th>
        <th style="width:25%">Item Name</th>
        <th style="width:10%">HSN/SAC</th>
        <th style="width:7%">Qty</th>
        <th style="width:10%">Price/Unit</th>
        <th style="width:10%">Taxable</th>
        <th style="width:8%">CGST</th>
        <th style="width:8%">SGST</th>
        <th style="width:12%">Amount</th>
      </tr>
    </thead>
    <tbody>
      <% let totalCgst=0, totalSgst=0; %>
      <% invoice.items.forEach(function(item, idx){ 
          const cgst = item.taxAmount / 2;
          const sgst = item.taxAmount / 2;
          totalCgst += cgst;
          totalSgst += sgst;
      %>
      <tr>
        <td class="text-center"><%= idx + 1 %></td>
        <td><%= item.description %></td>
        <td class="text-center"><%= item.hsn %></td>
        <td class="text-center"><%= item.qty %></td>
        <td class="text-end">₹ <%= item.price.toFixed(2) %></td>
        <td class="text-end">₹ <%= item.taxable.toFixed(2) %></td>
        <td class="text-end">₹ <%= cgst.toFixed(2) %></td>
        <td class="text-end">₹ <%= sgst.toFixed(2) %></td>
        <td class="text-end">₹ <%= item.total.toFixed(2) %></td>
      </tr>
      <% }); %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="5" class="text-end">Sub Total</th>
        <th class="text-end">₹ <%= invoice.subTotal.toFixed(2) %></th>
        <th class="text-end">₹ <%= totalCgst.toFixed(2) %></th>
        <th class="text-end">₹ <%= totalSgst.toFixed(2) %></th>
        <th class="text-end">₹ <%= invoice.grandTotal.toFixed(2) %></th>
      </tr>
    </tfoot>
  </table>

  <!-- Amount in words -->
  <div class="amount-in-words">
    <strong>Amount in Words:</strong> <%= invoice.amountWords %>
  </div>

  <!-- Bank Details & Sign -->
  <div class="row mt-3">
    <div class="col-md-6">
      <strong>Bank Details:</strong><br>
      Bank: <%= invoice.bank.name %><br>
      A/C No: <%= invoice.bank.account %><br>
      IFSC: <%= invoice.bank.ifsc %>
    </div>
    <div class="col-md-6 auth-sign">
      <div class="line"></div>
      Authorized Signatory
    </div>
  </div>

  <!-- Footer -->
  <div class="text-center mt-4 small text-muted">
    This is a computer generated invoice. No signature is required.
  </div>
</div>
</body>
</html>
